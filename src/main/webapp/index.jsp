			<div class="date">${date}</div>
			<h1 class="temp">${temperature} °C</h1>
			 <div class="weatherIcon">
        		 <img src="" alt="" id="weather-icon" width="30px" height="30px">
                 <input type="hidden" id="wc" value="${weatherCondition}"></input>
                 <div class="description">${weatherCondition}</div>
      		</div>
      		
			<div class="humidity"><i class="fa-solid fa-droplet" style=margin-right:8px;></i><span> Humidity : </span>${humidity}%</div>
			<div class="wind"><i class="fa-solid fa-wind"style=margin-right:8px;></i><span> Wind Speed : </span>${windSpeed} km/h</div>
		</div>
	</div>
	
	
